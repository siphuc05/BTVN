@model NspDay09LabCF.Models.NspLoai_San_Pham

@{
    ViewData["Title"] = "Chỉnh sửa loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa loại sản phẩm
            </h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="nspId" />

                <div class="mb-3">
                    <label asp-for="nspMaLoai" class="form-label fw-semibold">Mã loại</label>
                    <input asp-for="nspMaLoai" class="form-control" placeholder="Nhập mã loại sản phẩm" />
                    <span asp-validation-for="nspMaLoai" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspTenLoai" class="form-label fw-semibold">Tên loại</label>
                    <input asp-for="nspTenLoai" class="form-control" placeholder="Nhập tên loại sản phẩm" />
                    <span asp-validation-for="nspTenLoai" class="text-danger"></span>
                </div>

                <div class="form-check mb-4">
                    <input class="form-check-input" asp-for="nspTrangThai" id="TrangThaiCheck" />
                    <label class="form-check-label fw-semibold" for="TrangThaiCheck">
                        @Html.DisplayNameFor(model => model.nspTrangThai)
                    </label>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
