@model NspDay09LabCF.Models.NspLoai_San_Pham

@{
    ViewData["Title"] = "Chi tiết loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">
                <i class="bi bi-info-circle"></i> Thông tin chi tiết loại sản phẩm
            </h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspMaLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nspMaLoai)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspTenLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nspTenLoai)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspTrangThai)
                </dt>
                <dd class="col-sm-9">
                    @(Model.nspTrangThai ? "Kích hoạt" : "Ngừng sử dụng")
                </dd>
            </dl>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
            <a asp-action="Edit" asp-route-id="@Model?.nspId" class="btn btn-warning text-white">
                <i class="bi bi-pencil-square"></i> Chỉnh sửa
            </a>
        </div>
    </div>
</div>

