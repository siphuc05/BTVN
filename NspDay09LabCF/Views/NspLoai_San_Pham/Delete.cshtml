@model NspDay09LabCF.Models.NspLoai_San_Pham

@{
    ViewData["Title"] = "Xóa loại sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">
                <i class="bi bi-exclamation-triangle"></i> Xác nhận xóa loại sản phẩm
            </h4>
        </div>

        <div class="card-body">
            <p class="text-danger fw-bold">
                Bạn có chắc chắn muốn xóa loại sản phẩm này không?
            </p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspMaLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nspMaLoai)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspTenLoai)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.nspTenLoai)
                </dd>

                <dt class="col-sm-3 fw-semibold">
                    @Html.DisplayNameFor(model => model.nspTrangThai)
                </dt>
                <dd class="col-sm-9">
                    @(Model.nspTrangThai ? "Kích hoạt" : "Ngừng sử dụng")
                </dd>
            </dl>
        </div>

        <div class="card-footer bg-light d-flex justify-content-between">
            <form asp-action="Delete" method="post" class="m-0">
                <input type="hidden" asp-for="nspId" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                </button>
            </form>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left-circle"></i> Quay lại danh sách
            </a>
        </div>
    </div>
</div>
