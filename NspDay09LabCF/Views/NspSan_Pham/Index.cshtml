@model IEnumerable<NspDay09LabCF.Models.NspSan_Pham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-box-seam"></i> Danh sách sản phẩm
            </h4>
            <a asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle"></i> Thêm mới
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover align-middle text-center">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.nspMaSanPham)</th>
                        <th>@Html.DisplayNameFor(model => model.nspTenSanPham)</th>
                        <th>@Html.DisplayNameFor(model => model.nspHinhAnh)</th>
                        <th>@Html.DisplayNameFor(model => model.nspSoLuong)</th>
                        <th>@Html.DisplayNameFor(model => model.nspDonGia)</th>
                        <th>@Html.DisplayNameFor(model => model.nspLoaiSanPhamId)</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.nspMaSanPham)</td>
                            <td>@Html.DisplayFor(modelItem => item.nspTenSanPham)</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.nspHinhAnh))
                                {
                                    <img src="@item.nspHinhAnh" alt="Hình ảnh" class="img-thumbnail" style="width: 60px; height: 60px; object-fit: cover;" />
                                }
                                else
                                {
                                    <span class="text-muted">Không có</span>
                                }
                            </td>
                            <td>@Html.DisplayFor(modelItem => item.nspSoLuong)</td>
                            <td>@String.Format("{0:N0} đ", item.nspDonGia)</td>
                            <td>@Html.DisplayFor(modelItem => item.nspLoaiSanPhamId)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.nspId" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.nspId" class="btn btn-sm btn-info text-white">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.nspId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash3"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
