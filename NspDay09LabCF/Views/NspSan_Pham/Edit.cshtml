@model NspDay09LabCF.Models.NspSan_Pham

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
}

<div class="container mt-4">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="bi bi-pencil-square"></i> Cập nhật thông tin sản phẩm
            </h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>

        <div class="card-body">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="nspId" />

                <div class="mb-3">
                    <label asp-for="nspMaSanPham" class="form-label fw-bold"></label>
                    <input asp-for="nspMaSanPham" class="form-control" placeholder="Nhập mã sản phẩm" />
                    <span asp-validation-for="nspMaSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspTenSanPham" class="form-label fw-bold"></label>
                    <input asp-for="nspTenSanPham" class="form-control" placeholder="Nhập tên sản phẩm" />
                    <span asp-validation-for="nspTenSanPham" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspHinhAnh" class="form-label fw-bold"></label>
                    <div class="d-flex align-items-center gap-3">
                        <input asp-for="nspHinhAnh" class="form-control" placeholder="URL hình ảnh hoặc tên file" />
                        @if (!string.IsNullOrEmpty(Model.nspHinhAnh))
                        {
                            <img src="@Model.nspHinhAnh" alt="Hình hiện tại" class="img-thumbnail" style="width:70px; height:70px; object-fit:cover;" />
                        }
                    </div>
                    <span asp-validation-for="nspHinhAnh" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspSoLuong" class="form-label fw-bold"></label>
                    <input asp-for="nspSoLuong" class="form-control" placeholder="Nhập số lượng" />
                    <span asp-validation-for="nspSoLuong" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspDonGia" class="form-label fw-bold"></label>
                    <input asp-for="nspDonGia" class="form-control" placeholder="Nhập đơn giá" />
                    <span asp-validation-for="nspDonGia" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="nspLoaiSanPhamId" class="form-label fw-bold"></label>
                    <input asp-for="nspLoaiSanPhamId" class="form-control" placeholder="Nhập mã loại sản phẩm" />
                    <span asp-validation-for="nspLoaiSanPhamId" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Lưu thay đổi
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
