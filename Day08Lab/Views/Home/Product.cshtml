@model IEnumerable<Day08Lab.Models.Product>

@{
    ViewData["Title"] = "Sản phẩm";
}

<h2 class="text-center mb-4">Danh sách sản phẩm</h2>

<div class="container">
    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.Image" alt="@item.Name" class="card-img-top" style="height:200px;object-fit:cover;" />
                    <div class="card-body text-center">
                        <h5 class="card-title text-truncate">@item.Name</h5>
                        <p class="text-muted mb-1">@item.Category?.Name</p>
                        <p class="fw-bold text-danger">@item.Price.ToString("N0") ₫</p>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
