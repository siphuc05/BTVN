@model Category_Product.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="card" style="width: 30rem;">
    <img src="@Model.Image" class="card-img-top" alt="@Model.Name" />
    <div class="card-body">
        <h4 class="card-title">@Model.Name</h4>
        <p class="card-text"><strong>Giá gốc:</strong> @string.Format("{0:N0} đ", Model.Price)</p>
        <p class="card-text"><strong>Giá khuyến mãi:</strong> @string.Format("{0:N0} đ", Model.SalePrice)</p>
        <p class="card-text"><strong>Danh mục:</strong> @Model.Category?.Name</p>
        <p class="card-text"><strong>Mô tả:</strong> @Model.Description</p>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </div>
</div>
