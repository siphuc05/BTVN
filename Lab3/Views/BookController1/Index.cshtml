@model IEnumerable<Lab3.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h2>Danh sách các cuốn sách</h2>
<!--Hiển thị các combobox trên form -->
<div class=" form-group">
    <select name="Authour" class="form-control" asp-items="@ViewBag.authour">
        <option value="">Chọn tác giả</option>
    </select>
    <select name="Denre" class="form-control" asp-items="@ViewBag.genre">
        <option value="">Chọn thể loại</option>
    </select>
    <button type="submit" class="btn btn-primary">Tìm kiếm</button>
    <a asp-action="create" class="btn btn-danger">Thêm mới</a>
</div>
<!--Hiển thị danh sách các cuốn sách-->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tiêu đề</th>
            <th>Tác giả</th>
            <th>Thể loại</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var book in Model)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.AuthorId</td>
                <td>@book.GenreId</td>
                <td>@book.Price</td>
                <td>
                    <img src="@book.Image" alt="@book.Title" width="40" /> 
                </td>
                <td>
                    <a asp-action ="Edit" class="btn btn-sm btn-primary">Sửa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
